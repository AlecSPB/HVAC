<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="false" >

    <!-- android:orientation="vertical" -->

    <TabHost
        android:id="@+id/calendar_tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:isScrollContainer="false" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="false" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:isScrollContainer="false" >

            <TableLayout
                android:id="@+id/calendar_event_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingTop="40dp" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:paddingTop="55dp" >
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/calendar_day_tab"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="70dp"
                android:isScrollContainer="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical" 
                    android:background="@drawable/list_background">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Selected Day"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <include
                                android:id="@+id/calendar_dayview_timeheader"
                                layout="@layout/calendar_weekview_header" />

                            <ListView
                                android:id="@+id/calendar_dayview_list_times"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical" >
                            </ListView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <include
                                android:id="@+id/calendar_dayview_dayheader1"
                                layout="@layout/calendar_weekview_header" />

                            <ListView
                                android:id="@+id/calendar_dayview_list_day_actual"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                 >
                            </ListView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical" 
                   android:background="@drawable/list_background">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Preview"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <include
                                android:id="@+id/calendar_dayview_dayheader2"
                                layout="@layout/calendar_weekview_header" />

                            <ListView
                                android:id="@+id/calendar_dayview_list_day_preview"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical" >
                            </ListView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRow5251"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView23521"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Large Text"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <ListView
                            android:id="@+id/listView12435a34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </ListView>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow523232"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/button5325321"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button" />

                        <TextView
                            android:id="@+id/textView2346"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow3346"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/button23462"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button" />

                        <TextView
                            android:id="@+id/textView35768"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow48568"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/calendar_day_add"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5234567"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/calendar_day_remove"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remove" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow634645"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/calendar_day_clear"
                            style="?android:attr/buttonStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save as..." />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calendar_week_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <include
                        android:id="@+id/calendar_weekview_header"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_times"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <include
                        android:id="@+id/calendar_timeview_1"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_1"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <include
                        android:id="@+id/calendar_timeview_2"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_2"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <include
                        android:id="@+id/calendar_timeview_3"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_3"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <include
                        android:id="@+id/calendar_timeview_4"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_4"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <include
                        android:id="@+id/calendar_timeview_5"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_5"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <include
                        android:id="@+id/calendar_timeview_6"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_6"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <include
                        android:id="@+id/calendar_timeview_7"
                        layout="@layout/calendar_weekview_header" />

                    <ListView
                        android:id="@+id/calendar_weekview_list_7"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >
                    </ListView>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/month_tab"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="70dp"
                android:isScrollContainer="false"
                android:orientation="vertical" >

                <CalendarView
                    android:id="@+id/calendarView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="30dp"
                    android:paddingTop="30dp"
                    android:showWeekNumber="false"
                    android:shownWeekCount="1" />

                <!--
                     <TextView
                    android:id="@+id/month_tab_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="false"
                    android:text="@string/calendar_monthview_label" />
                -->
            </RelativeLayout>
        </FrameLayout>
    </TabHost>
