<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingLeft="10dp">

    <TextView
        android:id="@+id/calendar_listview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Air Conditioning On"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/calendar_listview_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/calendar_listview_title"
        android:text="72 Degrees"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/calendar_heat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/calendar_listview_line2"
        android:src="@drawable/large_snowflake" />

</RelativeLayout>