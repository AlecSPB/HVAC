<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp" >
	
    <TextView
        android:id="@+id/calendar_listview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/calendar_listview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/white"
        android:layout_below="@+id/calendar_listview_title"
        android:textSize="13dp" />

    <ImageView
        android:id="@+id/calendar_heat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar_listview_description"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/calendar_fan_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar_listview_description"
        android:layout_toRightOf="@+id/calendar_heat_image"
        android:src="@drawable/blank" />

    <ImageView
        android:id="@+id/calendar_energysave_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar_listview_description"
        android:layout_toRightOf="@+id/calendar_fan_image"
        android:src="@drawable/blank" />

</RelativeLayout>